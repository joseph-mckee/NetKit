                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <Style Selector="DataGridCell.macColumn">
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu>
                                                    <!-- <MenuItem Header="Copy MAC" Click="CopyMac_OnClick" /> -->
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <Style Selector="DataGridCell.hostColumn">
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu>
                                                    <!-- <MenuItem Header="Copy Hostname" Click="CopyHost_OnClick" /> -->
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <Style Selector="DataGridCell.vendorColumn">
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu>
                                                    <!-- <MenuItem Header="Copy Vendor" Click="CopyVendor_OnClick" /> -->
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGrid.Styles>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Destination"
                                                        CellStyleClasses="ipColumn"
                                                        Width="Auto"
                                                        Binding="{Binding Destination}" />
                                    <DataGridTextColumn Header="Mask"
                                                        CellStyleClasses="macColumn"
                                                        Width="Auto"
                                                        Binding="{Binding Mask}" />
                                    <DataGridTextColumn Header="Next Hop"
                                                        CellStyleClasses="vendorColumn"
                                                        Width="Auto"
                                                        Binding="{Binding NextHop}" />
                                    <DataGridTextColumn Header="Type"
                                                        CellStyleClasses="ipColumn"
                                                        Width="Auto"
                                                        Binding="{Binding Type}" />
                                    <DataGridTextColumn Header="Protocol"
                                                        CellStyleClasses="macColumn"
                                                        Width="Auto"
                                                        Binding="{Binding Proto}" />
                                    <DataGridTextColumn Header="Age"
                                                        CellStyleClasses="vendorColumn"
                                                        Width="Auto"
                                                        Binding="{Binding Age}" />
                                    <DataGridTextColumn Header="Metric"
                                                        CellStyleClasses="vendorColumn"
                                                        Width="Auto"
                                                        Binding="{Binding Metric1}" />
                                </DataGrid.Columns>
                            </DataGrid>
