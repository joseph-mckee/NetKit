                            <!--     </ItemsControl> -->
                            <!-- </StackPanel> -->
                        </Border>
                    </Expander>
                </Border>
                <Border Classes="frame" IsVisible="{Binding HasRoutes}">
                    <Expander HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                              IsExpanded="{Binding IsRouteTableExpanded}">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Routes:" />
                            </DataTemplate>
                        </Expander.HeaderTemplate>
                        <Border Name="RouteContainer" Classes="frame" Margin="5" HorizontalAlignment="Stretch">
                            <DataGrid HorizontalAlignment="Stretch" CanUserResizeColumns="True"
                                      CanUserSortColumns="True" IsReadOnly="True" GridLinesVisibility="All"
                                      ClipToBounds="True"
                                      ItemsSource="{Binding RouteRowModels}">
                                <DataGrid.Styles>
                                    <Style Selector="DataGridCell.ipColumn">
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu>
                                                    <!-- <MenuItem Header="Ping" Click="Ping_OnClick"  /> -->
                                                    <!-- <MenuItem Header="Traceroute" Click="Traceroute_OnClick" /> -->
